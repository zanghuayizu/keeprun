<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="请在下方对自己本次得运动进行评价，请手写0-9的数字，0代表非常不满意，9代表非常满意"
            android:textColor="#eee"
            android:textSize="22sp" />

        <com.example.liaodh.keeprun.view.commod.PaintView
            android:id="@+id/paint_view"
            android:layout_width="460dp"
            android:layout_height="460dp"
            android:layout_below="@id/text"
            android:background="#444" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="#888">

            <com.example.liaodh.keeprun.view.commod.FoxTextButton
                android:id="@+id/back"
                android:layout_width="100dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/send_verify"
                android:gravity="center"
                android:text="返回"
                android:textSize="18sp" />

            <com.example.liaodh.keeprun.view.commod.FoxTextButton
                android:id="@+id/refresh_edit"
                android:layout_width="100dp"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/send_verify"
                android:visibility="gone"
                android:gravity="center"
                android:text="重写"
                android:textSize="18sp" />

            <com.example.liaodh.keeprun.view.commod.FoxTextButton
                android:id="@+id/save"
                android:layout_width="100dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/send_verify"
                android:gravity="center"
                android:text="保存"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/test"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</layout>